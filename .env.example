# Environment variables for the Nerves Potentiometer Poncho Project
# Copy this file to .env and customize for your setup

# WiFi Configuration (for firmware deployment)
NERVES_WIFI_SSID=YOUR_WIFI_NETWORK_NAME
NERVES_WIFI_PSK=YOUR_WIFI_PASSWORD

# Phoenix Configuration
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_mix_phx_gen_secret

# Device Configuration
NERVES_HOSTNAME=nerves-potentiometer.local

# Development Settings
MIX_TARGET=host
MIX_ENV=dev

# Hardware Settings (optional)
ADS1115_I2C_ADDRESS=0x48

# Build Settings
FIRMWARE_TARGET=rpi0_2